// Prisma schema for SQLite storage
// Datasource uses DATABASE_URL; default is local dev.db, Fly uses /data/dev.db

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  price       Int
  description String?
  instruction String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id       String    @id @default(cuid())
  name     String?
  messages Message[]
}

model Message {
  id        String   @id @default(cuid())
  userId    String
  text      String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
