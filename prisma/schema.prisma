// Prisma schema for SQLite storage
// Datasource uses DATABASE_URL; default is local dev.db, Fly uses /data/dev.db

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  price       Int
  description String?
  instruction String?
  inStock     Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id           String    @id @default(cuid())
  name         String?
  contactPhone String?
  address      String?
  messages     Message[]
  orders       Order[]
}

model Message {
  id        String   @id @default(cuid())
  userId    String
  text      String
  role      String   @default("user")
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}

model Order {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message      String
  status       String
  contactPhone String?
  address      String?
  createdAt    DateTime @default(now())
  items        OrderItem[]
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId   String?
  productName String
  unitPrice   Int?
  quantity    Int      @default(1)
  createdAt   DateTime @default(now())
}
